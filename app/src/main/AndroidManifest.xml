<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisiuni -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Camera feature (optional pentru compatibility) -->
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-feature android:name="android.hardware.camera.front" android:required="false" />

    <!-- 2.5.8 Cloud backup rules:
         Disable automatic OS backups by default. User-controlled export (2.5.5) is the opt-in portability path.
         This avoids any implicit cloud backup of sensitive local state (consents/logs/secure storage). -->
    <application
        android:name=".VaultGuardApplication"
        android:allowBackup="false"
        android:icon="@android:drawable/ic_lock_lock"
        android:label="@string/app_name"
        android:theme="@style/Theme.Material3.DayNight.NoActionBar"
        android:supportsRtl="true"
        tools:targetApi="31"
        tools:ignore="GoogleAppIndexingWarning">

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        
        <!-- ✅ ADEVĂRATA REVOLUȚIE, LANSATĂ DIN MAINACTIVITY -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="unspecified"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".gdpr.DisclaimerActivity"
            android:exported="false"
            android:noHistory="true"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <activity
            android:name=".gdpr.PrivacyPolicyActivity"
            android:exported="false"
            android:noHistory="true"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <activity
            android:name=".gdpr.BiometricConsentActivity"
            android:exported="false"
            android:noHistory="true"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <activity
            android:name=".gdpr.DataDeletionActivity"
            android:exported="false"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <activity
            android:name=".gdpr.DataExportActivity"
            android:exported="false"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <activity
            android:name=".gdpr.RetentionSettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <activity
            android:name="com.vaultguard.security.biometric.ui.BiometricSettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <activity
            android:name="com.vaultguard.security.biometric.ui.BiometricTransparencyActivity"
            android:exported="false"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <!-- Document Scanner (v2.1.6) -->
        <activity
            android:name="com.vaultguard.document.DocumentScannerActivity"
            android:exported="false"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <activity
            android:name="com.vaultguard.document.DocumentListActivity"
            android:exported="false"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <activity
            android:name="com.vaultguard.document.DocumentDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar" />
        
    </application>

</manifest>